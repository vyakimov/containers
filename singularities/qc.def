Bootstrap: library
From: ubuntu:22.04
%post
  apt-get update && apt-get upgrade -y &&\
  apt-get install -y \
  build-essential \
  default-jre \
  cmake \
  git \
  locales \
  zlib1g-dev \
  python-is-python3 \
  python3-setuptools \
  unzip \
  wget &&\
  cd /opt && git clone https://github.com/ewels/MultiQC.git &&\
  cd MultiQC && git checkout 83af6d096765fbd277afce520edd6d41b20ff49a &&\
  python setup.py install &&\
  cd .. && wget https://www.bioinformatics.babraham.ac.uk/projects/fastqc/fastqc_v0.12.1.zip &&\
  unzip fastqc_v0.12.1.zip && rm fastqc_v0.12.1.zip &&\
  chmod 755 FastQC/fastqc &&\
  ln -s /opt/FastQC/fastqc /usr/local/bin/ &&\
  apt-get install -y locales-all
%environment
  export LC_ALL=C

